
<br/>
<div>

<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <dl class="zend_form">
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name, :label_html => { :class => 'text-fields' }, :required => true, :autofocus => true %>
    <%= f.input :email, :label_html => { :class => 'text-fields' }, :required => true %>
    <%= f.input :password, :label_html => { :class => 'text-fields' }, :required => true %>
    <%= f.input :password_confirmation, :label_html => { :class => 'text-fields' }, :required => true %>
    <%= f.input :role_name, :label_html => { :class => 'text-fields' }, :collection =>  {"Employer" => "employer", "Jobseeker" => "jobseeker"}, :include_blank => false %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Sign up" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
  </dl>
</div>
