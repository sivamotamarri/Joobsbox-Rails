
<div>
<%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
  <dl class="zend_form">
  <div class="form-inputs">
    <%= f.input :email, :label_html => { :class => 'text-fields' }, :required => false, :autofocus => true %>
    <%= f.input :password, :label_html => { :class => 'text-fields' }, :required => false %>
    <%= f.input :remember_me, :label_html => { :class => 'check_fields' } ,:input_html => { :class => 'checkfield' }, :as => :boolean if devise_mapping.rememberable?  %>
  </div>
<br/>
  <div class="form-actions">
    <br/>
    <%= f.button :submit, "Sign in" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
   </dl>
</div>

