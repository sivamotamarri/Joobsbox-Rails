<table class="roles">
  <thead>
    <tr>
      <th>SNO</th>
      <th>Name</th>
      <th>Created at</th>
    </tr>
  </thead>
  <tbody>
    <% Role.all.each_with_index do |role,i| %>

      <tr id="role_<%= role.id %>" class="job">
        <td><%= i+1 %></td>
        <td><%= best_in_place role, :name , :path => [:admin,role]%></td>
        <td><%= role.created_at.strftime("%Y-%m-%d %H:%M:%S") %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<script type="text/javascript" >
  $(function(){
      $('.best_in_place').best_in_place();
  });
</script>